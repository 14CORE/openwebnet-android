<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Device Card Style -->
    <style name="deviceCard"></style>

    <style name="deviceCard.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/deviceCard_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/deviceCard_marginBottom</item>
        <item name="android:layout_marginLeft">@dimen/deviceCard_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/deviceCard_marginRight</item>
    </style>

    <style name="deviceCard.textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/deviceCard_textView_paddingLeft</item>
        <item name="android:paddingRight">@dimen/deviceCard_textView_paddingRight</item>
    </style>

    <style name="deviceCard.imageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/deviceCard_imageButton_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/deviceCard_imageButton_marginBottom</item>
        <item name="android:layout_marginLeft">@dimen/deviceCard_imageButton_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/deviceCard_imageButton_marginRight</item>
        <item name="android:background">@null</item>
    </style>

    <!-- FloatingActionButton Style -->

    <style name="fab_menu"></style>

    <style name="fab_menu.button_mini">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fab_colorNormal">@color/accent</item>
        <item name="fab_colorPressed">@color/primary</item>
        <item name="fab_size">mini</item>
    </style>

    <style name="fab_menu.labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- OpenWebNet Message Style -->

    <style name="message"></style>

    <style name="message.linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="message.textViewFontAwesome">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="message.editText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLength">4</item>
        <item name="android:maxEms">4</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">32sp</item>
    </style>

</resources>
